<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="%courseview.header" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></HBox>
   </bottom>
   <right>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></VBox>
   </right>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane alignment="CENTER" hgap="10.0" prefHeight="120.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="75.0" />
                  <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" prefWidth="75.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="%courseview.name" />
                  <Label text="%courseview.code" GridPane.rowIndex="1" />
                  <Label text="%courseview.ects" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  <TextField GridPane.columnIndex="1" />
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label GridPane.columnIndex="4" GridPane.rowIndex="2" />
                  <Label text="%courseview.faculty" GridPane.columnIndex="3" />
                  <Label GridPane.columnIndex="4" />
                  <Label text="%courseview.teacher" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Label GridPane.columnIndex="4" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
            <TableView>
              <columns>
                <TableColumn prefWidth="150.0" text="%courseview.student" />
                <TableColumn prefWidth="150.0" text="%courseview.document" />
                  <TableColumn prefWidth="150.0" text="%courseview.grade" />
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></VBox>
   </center>
   <left>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="%courseview.add" />
            <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="%courseview.edit" />
            <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="%courseview.delete" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="140.0" />
         </padding></VBox>
   </left>
</BorderPane>
