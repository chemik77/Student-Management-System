         <children>
            <Hyperlink fx:id="hyperNewAccount" alignment="CENTER" prefHeight="28.0" prefWidth="144.0" text="Utwórz nowe konto">
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
            <Hyperlink fx:id="hyperRemind" alignment="CENTER" text="Przypomnij hasło">
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
            <Hyperlink fx:id="hyperBack" alignment="CENTER" text="Wstecz">
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
   </children>
