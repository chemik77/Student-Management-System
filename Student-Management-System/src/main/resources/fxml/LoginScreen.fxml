<GridPane hgap="5.0" prefHeight="200.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.chemik77.controllers.LoginController">
   <columnConstraints>
      <ColumnConstraints prefWidth="100.0" />
      <ColumnConstraints prefWidth="150.0" />
      <ColumnConstraints prefWidth="150.0" />
      <ColumnConstraints prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints prefHeight="40.0" />
      <RowConstraints prefHeight="40.0" />
      <RowConstraints prefHeight="40.0" />
      <RowConstraints prefHeight="40.0" />
      <RowConstraints prefHeight="40.0" />
   </rowConstraints>
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="501.0" text="Student Management System" textAlignment="CENTER" GridPane.columnSpan="4">
